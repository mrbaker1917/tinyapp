<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto mt-2 mt-lg-0">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>

      </div>
      <div><a href="/register"><button value="submit" type="submit" class="btn btn-outline-dark mr-2" role="button">New here? Register</button></a></div>
      <% if (user) { %>
      <form method="POST" action="/logout" class="form-inline">
        <span class="mr-sm-2">Logged in as: <%= user.email %></span>
        <button value="Submit" type="submit" class="btn btn-outline-dark my-2 my-sm-0">logout</button>
      </form>
      <% } else { %>
        <div>
          <a href="/login"><button value="Submit" type="login" class="btn btn-outline-dark my-2 my-sm-0">login</button></a>
        </div>
        <% } %>
    </div>
  </nav>
</header>